<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Relaynet.online domain configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">relaynet.online</domain>
        <!-- Trust system CA certificates -->
        <trust-anchors>
            <certificates src="system" />
            <!-- Also trust user-installed certificates for debugging on Kindle -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Allow cleartext traffic for local development servers -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator special host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Localhost and loopback -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Any development server on port 8080 -->
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
    </domain-config>
</network-security-config>

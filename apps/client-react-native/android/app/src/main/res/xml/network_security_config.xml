<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local development servers -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator special host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Localhost and loopback -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Allow cleartext for internal/private network ranges (development only) -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- RFC 1918 private ranges -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
    </domain-config>

    <!-- Production domains use HTTPS (no cleartext needed) -->
    <!-- node-dfw1.relaynet.online and node-dfw2.relaynet.online are accessed via HTTPS -->
</network-security-config>

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/state/*": ["src/state/*"],
      "@/native/*": ["native/*"],
      "@relay/shared": ["../shared/src/index.ts"],
      "@relay/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "native"],
  "exclude": ["node_modules", "android", "ios"]
}

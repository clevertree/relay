{
  "manifest_version": 3,
  "name": "Relay WebExtension Client",
  "version": "0.1.0",
  "description": "Connect to Relay Tracker, quickly open recent repositories, and optionally integrate with local torrent backends.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Relay",
    "default_icon": {
      "16": "media/icon-16.png",
      "32": "media/icon-32.png",
      "48": "media/icon-48.png",
      "128": "media/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "media/icon-16.png",
    "32": "media/icon-32.png",
    "48": "media/icon-48.png",
    "128": "media/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "cookies",
    "activeTab",
    "declarativeNetRequestWithHostAccess",
    "webRequestBlocking"
  ],
  "optional_permissions": [
    "downloads",
    "downloads.open"
  ],
  "host_permissions": [],
  "optional_host_permissions": [
    "<all_urls>",
    "https://relaynet.online/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/branch-detector.js", "content/bridge.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "relay-client@example.local",
      "strict_min_version": "109.0"
    }
  }
}

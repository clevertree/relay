{
    "type": "module",
    "name": "relay-monorepo",
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "dev": "npm --prefix apps/client-web run dev",
        "dev:server": "cargo run --manifest-path apps/server/Cargo.toml -- serve",
        "dev:server:dist": "RELAY_REPO_PATH=./data RELAY_STATIC_DIR=/Users/ari.asulin/p/relay/apps/client-web/dist RELAY_HTTP_PORT=8080 RELAY_HTTPS_PORT=8443 cargo run --manifest-path apps/server/Cargo.toml -- serve",
        "dev:server:dist:debug": "RELAY_REPO_PATH=./data RELAY_STATIC_DIR=apps/client-web/dist RELAY_HTTP_PORT=8080 RELAY_HTTPS_PORT=8443 cargo run --manifest-path apps/server/Cargo.toml -- serve",
        "start:server:release": "RELAY_REPO_PATH=/data RELAY_STATIC_DIR=apps/client-web/dist RELAY_HTTP_PORT=8080 RELAY_HTTPS_PORT=8443 cargo run --manifest-path apps/server/Cargo.toml --release -- serve",
        "build:server": "cargo build --manifest-path apps/server/Cargo.toml",
        "server:ipfs-add": "cargo run --manifest-path apps/server/Cargo.toml -- ipfs-add template-ui",
        "server:host": "cargo run --manifest-path apps/server/Cargo.toml -- serve --repo /data/repo.git --static template-ui",
        "web:dev": "npm --prefix apps/client-web run dev",
        "build:hook-wasm": "powershell .\\scripts\\build-hook-wasm.ps1",
        "build:hook-wasm:sh": "bash ./scripts/build-hook-wasm.sh",
        "web:dev:wasm": "npm run build:hook-wasm && npm --prefix apps/client-web run dev",
        "web:dev:full": "node scripts/dev-server.cjs",
        "web:build": "npm --prefix apps/client-web run build",
        "web:build:debug": "npm --prefix apps/client-web run build:debug",
        "web:preview": "npm --prefix apps/client-web run preview",
        "test": "cargo test --workspace",
        "test:e2e:script": "node scripts/e2e/ipfs-fallback.mjs",
        "test:e2e:peers": "node scripts/e2e/test-master-peers.mjs",
        "test:e2e:local": "node scripts/e2e/test-local-file-serving.mjs",
        "lint:rust": "cargo clippy -p streaming-files -- -D warnings",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "tailwind:build": "tailwindcss -c tailwind.config.cjs -i template-ui/site/globals.css -o template/site/globals.generated.css --minify",
        "tailwind:watch": "tailwindcss -c tailwind.config.cjs -i template-ui/site/globals.css -o template/site/globals.generated.css -w",
        "test:e2e": "playwright test",
        "rn:start": "npm --prefix apps/client-react-native run start",
        "rn:android": "npm --prefix apps/client-react-native run android",
        "rn:android:assembleRelease": "npm --prefix apps/client-react-native run android:assembleRelease",
        "rn:android:installRelease": "npm --prefix apps/client-react-native run android:installRelease",
        "rn:android:release": "npm --prefix apps/client-react-native run android:release",
        "rn:build:release": "bash ./scripts/rn-build-release.sh",
        "rn:ios": "npm --prefix apps/client-react-native run ios",
        "rn:typecheck": "npm --prefix apps/client-react-native run typecheck",
        "rn:prep-hook-transpiler": "bash ./scripts/rn-prepare-hook-transpiler.sh",
        "docker:build:local": "docker build -t relay-all-in-one:local .",
        "docker:run:local:data": "bash ./scripts/run-relay-local-with-data.sh"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.1.3",
        "@playwright/test": "^1.57.0",
        "@storybook/addon-a11y": "10.0.8",
        "@storybook/addon-docs": "10.0.8",
        "@storybook/web-components-vite": "10.0.8",
        "autoprefixer": "^10.4.20",
        "glob": "^8.1.0",
        "js-yaml": "^4.1.0",
        "lit": "3.3.1",
        "playwright": "^1.57.0",
        "postcss": "^8.4.49",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "storybook": "10.0.8",
        "tailwindcss": "^3.4.14"
    },
    "dependencies": {
        "@babel/runtime": "^7.24.0"
    }
}

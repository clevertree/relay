{
  "name": "relay-monorepo",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev:tracker": "pnpm -C apps/tracker dev",
    "dev:client": "pnpm -C apps/client tauri dev",
    "build:server": "cargo build --manifest-path apps/server/Cargo.toml",
    "start:server": "cargo run --manifest-path apps/server/Cargo.toml",
    "test": "cargo test --workspace",
    "e2e": "node scripts/e2e/e2e.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tailwind:build": "tailwindcss -c template/tailwind.config.cjs -i template/site/tailwind.src.css -o template/site/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -c template/tailwind.config.cjs -i template/site/tailwind.src.css -o template/site/tailwind.css -w"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.3",
    "@storybook/addon-docs": "10.0.8",
    "@storybook/web-components-vite": "10.0.8",
    "autoprefixer": "^10.4.20",
    "glob": "^8.1.0",
    "js-yaml": "^4.1.0",
    "lit": "3.3.1",
    "postcss": "^8.4.49",
    "storybook": "10.0.8",
    "tailwindcss": "^3.4.14"
  }
}
